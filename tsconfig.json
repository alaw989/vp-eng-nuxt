{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "exclude": [
    "tests-e2e/**",
    "tests/**",
    "test-results/**",
    "playwright-report/**",
    "dist/**",
    ".output/**",
    "node_modules/**",
    "components/__tests__/**",
    "composables/__tests__/**",
    "utils/__tests__/**"
  ]
}
